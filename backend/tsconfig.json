{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "allowImportingTsExtensions": true,
        "noEmit": true,
    },
    "include": [
        "src/**/*"
    ]
}